{
  "compilerOptions": {
    "outDir": "./public",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ]
}
